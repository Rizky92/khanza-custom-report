{
    "name": "rizky92/smc-internal-app",
    "type": "project",
    "description": "SMC Internal App",
    "require": {
        "php": "^7.4",
        "ext-xlswriter": "*",
        "brick/money": "^0.5.3",
        "diglactic/laravel-breadcrumbs": "^8.1.1",
        "fideloper/proxy": "^4.4.2",
        "fruitcake/laravel-cors": "^2.2.0",
        "guzzlehttp/guzzle": "^7.7.0",
        "infyomlabs/routes-explorer": "^1.0.0",
        "lab404/laravel-impersonate": "^1.7.4",
        "laravel/framework": "^8.83.27",
        "laravel/tinker": "^2.8.1",
        "livewire/livewire": "<=2.10.7",
        "nullpunkt/lz-string-php": "^1.3",
        "rap2hpoutre/laravel-log-viewer": "^2.3.0",
        "rizky92/carbon-helper": "^0.0.3",
        "rizky92/laravel-xlswriter": "*",
        "spatie/laravel-permission": "^5.10.1",
        "spatie/laravel-settings": "^3.1",
        "staudenmeir/belongs-to-through": "^2.11",
        "staudenmeir/eloquent-has-many-deep": "^1.14",
        "staudenmeir/laravel-adjacency-list": "^1.9"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.7.0",
        "barryvdh/laravel-ide-helper": "^2.13.0",
        "facade/ignition": "^2.17.7",
        "fakerphp/faker": "^1.22.0",
        "laravel/dusk": "^6.25.2",
        "mockery/mockery": "^1.6.1",
        "nunomaduro/collision": "^5.11.0",
        "phpunit/phpunit": "^9.6.8",
        "psalm/plugin-laravel": "^1.6.2",
        "staudenmeir/laravel-migration-views": "^1.5.1"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Seeders\\": "database/seeders",
            "Database\\Factories\\": "database/factories"
        },
        "files": [
            "app/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan livewire:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "lint": [
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:models --nowrite",
            "@php artisan ide-helper:meta",
            "@refactor"
        ],
        "lint:rebase": [
            "./vendor/bin/psalm --php-version=7.4 --set-baseline=psalm-baseline.xml",
            "@refactor"
        ],
        "psalm-init": [
            "./vendor/bin/psalm --init",
            "./vendor/bin/psalm-plugin enable psalm/plugin-laravel"
        ],
        "refactor": [
            "./vendor/bin/psalm --php-version=7.4 --alter --issues=MissingReturnType,MissingClosureReturnType,InvalidReturnType,InvalidNullableReturnType,InvalidFalsableReturnType,MismatchingDocblockParamType,MismatchingDocblockReturnType,ParamNameMismatch,PossiblyUndefinedVariable,PossiblyUndefinedGlobalVariable,UnnecessaryVarAnnotation --allow-backwards-incompatible-changes=true"
        ],
        "optimize": [
            "@php artisan optimize -q",
            "@php artisan view:cache -q",
            "@php artisan livewire:discover -q",
            "@php artisan settings:discover -q"
        ],
        "optimize:clear": [
            "@php artisan optimize:clear",
            "@php artisan livewire:discover",
            "@php artisan settings:clear-cache",
            "@php artisan settings:clear-discover"
        ]
    }
}
